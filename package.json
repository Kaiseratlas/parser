{
  "name": "@kaiseratlas/parser",
  "author": {
    "name": "Vitaly Pereslavtsev",
    "email": "dev@pereslavtsev.com",
    "url": "https://www.pereslavtsev.com/"
  },
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc --p tsconfig.build.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "docs": "typedoc --plugin typedoc-plugin-markdown --hideBreadcrumbs --categorizeByGroup true --entryPointStrategy expand ./src --exclude \"**/*+(index|.spec|.e2e-spec).ts\"",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:debug": "cross-env DEBUG=* yarn test:e2e"
  },
  "devDependencies": {
    "@types/color": "^3.0.3",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.0.0",
    "@types/pngjs": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.3.2",
    "ts-jest": "^27.1.4",
    "tsconfig-paths": "^3.14.1",
    "tscpaths": "^0.0.9",
    "typedoc": "^0.22.14",
    "typedoc-plugin-markdown": "^3.11.14",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "color": "^4.2.1",
    "csv-parser": "^3.0.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "fast-glob": "^3.2.11",
    "jomini": "^0.6.4",
    "nanoid": "^3.3.2",
    "pngjs": "^6.0.0",
    "reflect-metadata": "^0.1.13",
    "sdds": "^0.0.2",
    "tga": "^1.0.4"
  },
  "jest": {
    "moduleNameMapper": {
      "@shared": "<rootDir>/src/shared"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
